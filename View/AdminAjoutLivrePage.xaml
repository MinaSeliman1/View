<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.AdminAjoutLivrePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Bibliotheque.ViewModel;assembly=Bibliotheque.ViewModel"
    x:DataType="vm:AdminAjoutLivreViewModel"
    Title="Ajout d'un livre">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Button Text="← Retour à l'espace administrateur"
                    HorizontalOptions="Start"
                    Clicked="OnRetourClicked" />

            <Label Text="Ajouter un nouveau livre"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Titre"
                   Text="{Binding Titre}" />

            <Entry Placeholder="Auteur"
                   Text="{Binding Auteur}" />

            <Entry Placeholder="ISBN"
                   Text="{Binding Isbn}" />

            <Entry Placeholder="Maison d'édition"
                   Text="{Binding MaisonEdition}" />

            <Entry Placeholder="Date de publication (AAAA-MM-JJ)"
                   Text="{Binding DatePublicationTexte}" />

            <Editor Placeholder="Description"
                    HeightRequest="100"
                    Text="{Binding Description}" />

            <Button Text="Enregistrer le livre"
                    Command="{Binding AjouterLivreCommand}" />

            <Label Text="{Binding Message}"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
