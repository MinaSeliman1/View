<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.AdminSuppressionPage"
    x:Name="SuppressionPageRoot"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Bibliotheque.ViewModel;assembly=Bibliotheque.ViewModel"
    xmlns:model="clr-namespace:Bibliotheque.Model;assembly=Bibliotheque.Model"
    x:DataType="vm:AdminSuppressionViewModel"
    Title="Suppression de livres">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- HEADER -->
        <VerticalStackLayout Grid.Row="0" Spacing="15">
            <Button Text="← Retour à l'espace administrateur"
                    HorizontalOptions="Start"
                    Clicked="OnRetourClicked" />

            <Label Text="Supprimer un livre"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White" />
        </VerticalStackLayout>

        <!-- LISTE SCROLLABLE -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Livres}"
                        Margin="0,10,0,0"
                        SelectionMode="None"
                        ItemsLayout="VerticalList">

            <CollectionView.EmptyView>
                <Label Text="Aucun livre disponible."
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       Opacity="0.7"
                       TextColor="White" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Livre">
                    <Frame Padding="10"
                           Margin="0,5"
                           CornerRadius="10"
                           HasShadow="True"
                           BackgroundColor="#222222">

                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Titre}"
                                       FontAttributes="Bold"
                                       FontSize="18"
                                       TextColor="White" />

                                <Label Text="{Binding Auteur}"
                                       FontSize="14"
                                       Opacity="0.8"
                                       TextColor="White" />

                                <Label Text="{Binding ISBN}"
                                       FontSize="12"
                                       Opacity="0.6"
                                       TextColor="White" />
                            </VerticalStackLayout>

                            <Button Grid.Column="1"
                                    Text="Supprimer"
                                    Command="{Binding Source={x:Reference SuppressionPageRoot}, Path=BindingContext.SupprimerLivreCommand}"
                                    CommandParameter="{Binding .}" />
                        </Grid>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
