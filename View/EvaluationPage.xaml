<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.EvaluationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Bibliotheque.ViewModel;assembly=Bibliotheque.ViewModel"
    xmlns:model="clr-namespace:Bibliotheque.Model;assembly=Bibliotheque.Model"
    x:DataType="vm:EvaluationViewModel"
    Title="Livres les mieux notés">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- HEADER -->
        <VerticalStackLayout Grid.Row="0" Spacing="10">
            <Button Text="← Retour"
                    HorizontalOptions="Start"
                    Clicked="OnRetourClicked" />

            <Label Text="Livres avec une note de 4 et plus"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="White" />
        </VerticalStackLayout>

        <!-- LISTE SCROLLABLE -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding LivresBienNotes}"
                        Margin="0,10,0,0"
                        ItemsLayout="VerticalList">

            <CollectionView.EmptyView>
                <Label Text="Aucun livre n'a encore une note de 4 ou plus."
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       Opacity="0.7"
                       TextColor="White" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Livre">
                    <Frame Padding="10"
                           Margin="0,5"
                           CornerRadius="10"
                           HasShadow="True"
                           BackgroundColor="#222222">

                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Titre}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                                   TextColor="White" />

                            <Label Text="{Binding Auteur}"
                                   FontSize="14"
                                   Opacity="0.8"
                                   TextColor="White" />

                            <Label Text="{Binding MoyenneEvaluation, StringFormat='Note : {0:0.0}/5'}"
                                   FontSize="14"
                                   TextColor="White" />

                            <Label Text="{Binding NombreEvaluations, StringFormat='({0} évaluations'}"
                                   FontSize="12"
                                   Opacity="0.7"
                                   TextColor="White" />
                        </VerticalStackLayout>

                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
