<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="View.ListeLivresPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Bibliotheque.ViewModel;assembly=Bibliotheque.ViewModel"
    xmlns:model="clr-namespace:Bibliotheque.Model;assembly=Bibliotheque.Model"
    x:DataType="vm:ListeLivresViewModel"
    Title="Catalogue des livres">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <VerticalStackLayout Grid.Row="0" Spacing="10">


            <Button x:Name="BtnRetour"
    
        Text="← Retour"
        HorizontalOptions="Start"
        Clicked="OnRetourClicked" />

            <Label Text="Catalogue des livres"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="White"
      
                   HorizontalOptions="Center" />

        </VerticalStackLayout>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Livres}"
                        Margin="0,10,0,0"
      
                   ItemsLayout="VerticalList"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">

            <CollectionView.EmptyView>

                <Label Text="Aucun livre disponible."
HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"
                       TextColor="White"
                       Opacity="0.7" />
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Livre">

                    <Frame Padding="12"
                           Margin="0,5"
                        
                   CornerRadius="12"
                           HasShadow="True"
                           BackgroundColor="#222">

                        <VerticalStackLayout Spacing="2">


                            <Label Text="{Binding Titre}"
                                   FontAttributes="Bold"
                                   FontSize="18"
                  
                                   TextColor="White" />

                            <Label Text="{Binding DatePublication, StringFormat='Publié le : {0:yyyy-MM-dd}'}"
                                   FontSize="14"
                 
                                   TextColor="#CCCCCC" />

                            <HorizontalStackLayout Spacing="5">
                                <Label Text="{Binding MoyenneEvaluation, StringFormat='Note: {0:0.0}/5'}"
                                       FontSize="12"
                                       TextColor="#AAAAAA" />
                                <Label Text="{Binding NombreEvaluations, StringFormat='({0} évaluations)'}"
                                       FontSize="12"
                                       TextColor="#AAAAAA" />
                            </HorizontalStackLayout>


                        </VerticalStackLayout>

                    </Frame>

                </DataTemplate>
            </CollectionView.ItemTemplate>


        </CollectionView>

    </Grid>
</ContentPage>